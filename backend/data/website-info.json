      "path": "/about-me",
      "description": "Detailed timeline of professional experience and journey",
      "features": [
        "Interactive timeline with expandable details",
        "Full-screen detail panel with asymmetric zone layout",
        "Skill badges with hover animations",
        "Company highlights and achievements",
        "Scroll indicator chevrons"
      ],
      "components": ["Timeline", "TimelineJobs", "ScrollIndicator", "DetailPanel"],
      "designInnovations": [
        "Full-Screen Timeline Detail Panel",
        "Animated Chevron Scroll Indicator"
      ]
    },
    {
      "id": "artistic",
      "name": "Artistic",
      "path": "/artistic",
      "description": "Gallery of artistic and creative work, photos, and digital art",
      "features": [
        "Photo gallery with Flickr integration",
        "Matrix-style text reveal animations",
        "Custom cursor interactions",
        "High-quality image loading",
        "Responsive grid layout"
      ],
      "components": ["Layout", "Footer", "BrushTransition"],
      "dataSource": "Flickr API + Facebook photos"
    },
    {
      "id": "contact-me",
      "name": "Contact Me",
