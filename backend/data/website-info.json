  "apiEndpoints": [
    {
      "path": "/api/timeline",
      "method": "GET",
      "description": "Fetch timeline data (jobs and experiences)",
      "dataSource": "backend/data/strubloid.json"
    },
    {
      "path": "/api/health",
      "method": "GET",
      "description": "Health check endpoint for backend connectivity",
      "response": { "status": "ok" }
    },
    {
      "path": "/api/github",
      "method": "GET",
      "description": "Fetch GitHub user information and projects",
      "dataSource": "backend/data/github.json"
    },
    {
      "path": "/api/flickr",
      "method": "GET",
      "description": "Fetch photos from Flickr API",
      "externalAPI": "Flickr SDK"
    },
    {
      "path": "/api/background-photos",
      "method": "GET",
      "description": "Fetch background photos from multiple sources",
      "sources": ["Flickr", "Facebook"]
    },
    {
      "path": "/api/contact/send",
      "method": "POST",
      "description": "Send contact form email",
      "integrations": ["SendGrid / Resend", "Google reCAPTCHA"],
      "validation": "Contact form validator"
    }
  ],

